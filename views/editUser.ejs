<%- include('header') -%>

<div class="container border py rounded-3">
    <div class="row justify-content-center">
            <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-2" style="text-align: center;">Edit user <%= user.name %></h2>
                <p class="text-dark-50 mb-5">Please make the update</p>
                <form action="/admin/update/<%= user._id %>" method="post">
                    <div class="form-outline form-white mb-4">
                       <h5>Name:</h5>
                        <input type="name" name="name" placeholder="Enter your name" value="<%= user.name %>"
                            class="form-control form-control-lg" required />
                    </div>

                    <div class="form-outline form-white mb-4">
                        <h5>Email:</h5>
                        <input type="email" name="email" class="form-control form-control-lg"
                            placeholder="Enter your email" value="<%= user.email %>" required />
                    </div>

                    <button class="btn btn-success btn-lg px-5" type="submit" style="margin-left: 170px;">Update User</button>
                </form>
            </div>
    </div>
</div>

<%- include('footer') -%>
