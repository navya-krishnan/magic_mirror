<%-include('header')-%>
<style>
    .loginbox{
        background: rgba(255,255,255,0.1);
-webkit-backdrop-filter: blur(10px);
backdrop-filter: blur(10px);
border: 1px solid rgba(255,255,255,0.05);
    }
</style>
    <div class="div form-container " id="login">
        <div class="container border py-5 rounded-3 loginbox" style="width:30%">
            <div class="title pb-5">
                <h2 class="font-weight-bold">LogIn Page</h2>
                <span>Log in for the existing user</span>
                <% if (errorMessage) { %>
                    <div class="alert alert-danger mt-3" role="alert">
                        <%= errorMessage %>
                    </div>
                <% } %>

                <% if (succesMessage) { %>
                    <div class="alert alert-success mt-3" role="alert">
                        <%= succesMessage %>
                    </div>
                <% } %>
            </div>
            <form action="/" method="post" class="loginform">
                <div class="form-group">
                    <h5 align="left">Email Id:</h5>
                    <input type="email" class="form-control" placeholder="Enter your email here..." name="email"><br>
                </div>
                <div class="form-group">
                    <h5 align="left">Password:</h5>
                    <input type="password" class="form-control" placeholder="Enter your password here..." name="password">
                </div>
                <br>
                <button type="submit" class="btn btn-light rounded " id="sign">LogIn</button>
            </form>
            <h4 style="margin-left: -30px;">Create new account</h4>
            <a href="Signup" style="margin-left: -10px; color:black">SignUp</a>
        </div>
    </div>

    <%-include('footer')-%>